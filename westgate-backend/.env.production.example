# Westgate School Backend Production Environment
# Copy this to .env for production deployment

# Environment
NODE_ENV=production

# Server Configuration
PORT=5000

# Database Configuration (Use MongoDB Atlas or secure MongoDB instance)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/westgate-school?retryWrites=true&w=majority

# JWT Configuration (Use strong secrets in production)
JWT_SECRET=your-super-strong-jwt-secret-key-at-least-256-bits-long
JWT_EXPIRES_IN=24h

# Cloudinary Configuration (Required for image uploads)
CLOUDINARY_CLOUD_NAME=your-production-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Configuration (for notifications)
EMAIL_SERVICE=gmail
EMAIL_USER=your-production-email@gmail.com
EMAIL_PASS=your-app-specific-password
EMAIL_FROM_NAME=Westgate School
EMAIL_FROM_ADDRESS=noreply@westgateschool.ac.ke

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
UPLOAD_RATE_LIMIT_MAX=20

# CORS Origins (production domains)
ALLOWED_ORIGINS=https://westgateschool.ac.ke,https://www.westgateschool.ac.ke,https://admin.westgateschool.ac.ke

# Security Headers
TRUST_PROXY=true

# Logging
LOG_LEVEL=info

# Health Check
HEALTH_CHECK_ENABLED=true